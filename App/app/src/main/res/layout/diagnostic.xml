<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:text="Dr. Rodrigo Alencar" />

            <TextView
                android:id="@+id/crm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="CRM: 1234" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp"
                app:srcCompat="@mipmap/ecg_image" />

            <TextView
                android:id="@+id/descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Normalmente, o coração é capaz de bombear o sangue pelo corpo sem ter que se esforçar mais do que o necessário. Ele possui um sistema..." />

            <TextView
                android:id="@+id/data_hora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="05:04 PM, Março 2, 2019" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonExame"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_80sdp"
            android:background="#FCFCFC"
            android:scaleType="fitCenter"
            android:src="@drawable/heart_icon_unselected" />

        <ImageButton
            android:id="@+id/buttonDiagnosticos"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_80sdp"
            android:background="#FCFCFC"
            android:scaleType="fitCenter"

            android:src="@drawable/user_icon_selected" />

        <ImageButton
            android:id="@+id/buttonSettings"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="#FCFCFC"
            android:scaleType="fitCenter"
            android:src="@drawable/settings_icon_unselected" />

    </LinearLayout>
</LinearLayout>